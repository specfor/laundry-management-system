{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "unplugin-icons/types/vue",
      "@intlify/unplugin-vue-i18n/messages"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
